<h1 class="text-center mt-4">Listado de Noticias</h1>
  <div class="mx-auto" style="width: 80%;">
    <% @news.each do |new| %>
    
      <div class="card text-center">
        <img src=<%= new.link %> class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= new.title %></h5>
          by <%= new.user.username if new.user %>
          <p class="card-text"><%= new.subtitle %></p>
          <%= link_to "Mostrar", news_path(new), class: "btn btn-outline-success" %>
          <%= link_to "Edit", edit_news_path(new), class: "btn btn-xs btn-primary" %> 
          <%= link_to "Eliminar", news_path(new), method: :delete, 
                                                data: { confirm: "Estás seguro que deseas borrar esta noticia?" }, 
                                                class: "btn btn-xs btn-danger" %>
        </div>
      </div>
  
    <% end %>
  </div>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Author</th>
      <th>Description</th>
      <th>Link</th>
      <th colspan="3">Acción</th>
    </tr>
  </thead>
  <tbody>
    <% @news.each do |new| %>
      <tr>
        <td><%= new.title %></td>
        <td><%= new.subtitle %></td>
        <td><%= new.author %></td>
        <td><%= new.description %></td>
        <td><%= new.link %></td>
        <td><%= link_to "Show", news_path(new) %></td>
        <td><%= link_to "Edit", edit_news_path(new) %></td>
        <td><%= link_to "Delete", news_path(new), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
  <%= link_to 'Create new article', new_news_path %>
</p>
