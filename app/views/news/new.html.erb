<%= form_with scope: :new, data: { turbo: false }, url: new_news_path, local: true do |f| %>

  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :subtitle %><br/>
    <%= f.text_field :subtitle %>
  </p>
  <p>
    <%= f.label :author %><br/>
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>
