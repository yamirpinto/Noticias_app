<h1 class="text-center mt-4"><%= @new.title %></h1>
  <div background-color: #000000;>
      <img src=<%= @new.link %> class="card-img-top" max-height ="600px";>
  </div>
  <br/><br/>
  <div class="container">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title"><%= @new.subtitle %></h4>
        by <%= @new.user.username if @user.user %>
        <h6 class="card-title"><%= @new.author %></h6>
        <h6 class="card-title"><%= @new.created_at %></h6><br/>
        <p class="card-text"><%= @new.description %></p>
        <div class="text-center">
          <%= link_to "Mostrar", news_path(@new), class: "btn btn-outline-success" %>
          <%= link_to "Edit", edit_news_path(@new), class: "btn btn-xs btn-primary" %> 
          <%= link_to "Eliminar", @new, method: :delete, data: { confirm: "EstÃ¡s seguro que deseas borrar esta noticia?" }, class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<%= link_to 'Return to news listing', news_index_path, class: "btn btn-outline-success" %>