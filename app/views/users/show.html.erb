<div class="page-content">
  <h1 class="text-center mt-4 text-white"><%= @user.username %> Perfil</h1>
  
  <div class="text-center mt-4">
    <% if logged_in? && @user == current_user %>
      <div class="text-center mt-4">
      <%= link_to "Edita tu perfil", edit_user_path(@user), class: "btn btn-outline-dark" %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= link_to @user.username, @user %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to gravatar_for(@user, size: 150), @user %>
            </h5>
            <p class="card-text"><%= pluralize(@user.news.count, "Noticias") %></p>
            <%= link_to "Ver Perfil", @user, class: "btn btn-outline-success" %>
            <% if logged_in? and @user == current_user %>
              <%= link_to "Editar Perfil", edit_user_path(@user), class: "btn btn-outline-info" %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>Registrado hace: <%= time_ago_in_words(@user.created_at) %></small>
          </div>
        </div>
      </div>
    </div>
    </div>
  <% end %>
  
</div>
